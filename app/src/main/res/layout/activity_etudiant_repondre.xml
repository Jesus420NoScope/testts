<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkblue2"
    android:statusBarColor="@color/black"
    tools:context=".EtudiantRepondre">

    <ImageView
        android:id="@+id/button_back3"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/repondre_au_questionnaire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="85dp"
        android:fontFamily="@font/kanit"
        android:text="Répondez à la question suivante:"
        android:textAlignment="center"

        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <Button
        android:id="@+id/buttonA"
        style="@style/TextStyle"
        android:textColor="@color/black"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="A"
        app:layout_constraintEnd_toStartOf="@+id/buttonB"
        app:layout_constraintTop_toTopOf="@+id/buttonB"
        android:layout_marginRight="@dimen/margin_60"/>

    <Button
        android:id="@+id/buttonB"
        style="@style/TextStyle"
        android:textColor="@color/black"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/repondre_au_questionnaire"
        app:layout_constraintTop_toBottomOf="@+id/repondre_au_questionnaire"
        android:layout_marginTop="70dp" />

    <Button
        android:id="@+id/buttonC"
        style="@style/TextStyle"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="C"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/buttonB"
        app:layout_constraintStart_toEndOf="@+id/buttonB"
        android:layout_marginLeft="@dimen/margin_60"/>

    <Button
        android:id="@+id/buttonD"
        style="@style/TextStyle"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="D"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/buttonA"
        app:layout_constraintStart_toStartOf="@+id/buttonA"
        app:layout_constraintTop_toBottomOf="@+id/buttonA"
        android:layout_marginTop="@dimen/margin_60"/>

    <Button
        android:id="@+id/buttonE"
        style="@style/TextStyle"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="E"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/buttonB"
        app:layout_constraintStart_toStartOf="@+id/buttonB"
        app:layout_constraintTop_toBottomOf="@+id/buttonB"
        android:layout_marginTop="@dimen/margin_60"/>

    <Button
        android:id="@+id/buttonF"
        style="@style/TextStyle"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="F"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/buttonC"
        app:layout_constraintStart_toStartOf="@+id/buttonC"
        app:layout_constraintTop_toBottomOf="@+id/buttonC"
        android:layout_marginTop="@dimen/margin_60"/>

    <Button
        android:id="@+id/buttonG"
        style="@style/TextStyle"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="G"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/buttonD"
        app:layout_constraintStart_toStartOf="@+id/buttonD"
        app:layout_constraintTop_toBottomOf="@+id/buttonD"
        android:layout_marginTop="@dimen/margin_60"/>

    <Button
        android:id="@+id/buttonH"
        style="@style/TextStyle"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="H"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/buttonE"
        app:layout_constraintStart_toStartOf="@+id/buttonE"
        app:layout_constraintTop_toBottomOf="@+id/buttonE"
        android:layout_marginTop="@dimen/margin_60"/>

    <Button
        android:id="@+id/buttonI"
        style="@style/TextStyle"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="I"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/buttonF"
        app:layout_constraintStart_toStartOf="@+id/buttonF"
        app:layout_constraintTop_toBottomOf="@+id/buttonF"
        android:layout_marginTop="@dimen/margin_60"/>

    <Button
        android:id="@+id/buttonValider"
        style="@style/TextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valider"
        android:textAllCaps="false"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonH" />
</androidx.constraintlayout.widget.ConstraintLayout>